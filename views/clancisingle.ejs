                                                <img src="/images/snicle.jpg" alt="Portfolio Item">
                                            </div>
                                        </div><!-- .Portfolio-img end -->
                                    </div><!-- . portfolio-item end -->

                                    <!-- Portfolio #5 -->
                                    <div class="portfolio-item">
                                        <div class="portfolio--img">
                                            <div class="bg-section">
                                                <img src="/assets/images/portfolio/fullwidth/5.jpg" alt="Portfolio Item">
                                            </div>
                                        </div><!-- .Portfolio-img end -->
                                    </div><!-- . portfolio-item end -->
                                </div>
                            </div>
                        </div><!-- .row end -->
                        <div class="entry--content">
                            <div class="entry--by">
                                <img src="/assets/images/blog/author/2.png" alt="entry author">
                                <div class="entry--by-content">
                                    by : <a href="#"><%= clanak.username %></a>
                                </div>
                            </div>
                            <div class="entry--meta">
                                <span class="entry--meta-date"><%= moment(clanak.created_on).format("Do MMMM YYYY");%></span>
                                <span class="entry--meta-comments">comments: <a href="#">11</a></span>
                            </div>
                            <div class="entry--title">
                                <h4><a href="#"><%= clanak.title %></a></h4>
                            </div>
                            <div class="entry--bio">
                               <%- clanak.content_text %>

                            </div>
                            <div class="entry--share">
                                <span class="share--title">share this article: </span>
