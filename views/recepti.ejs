<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <!-- Font -- >

  <!-- Style -->
    <% include partials/scripts.ejs %>

    <link href="https://use.fontawesome.com/releases/v5.0.6/css/all.css" rel="stylesheet">
</head>

<body>
<!-- header -->
<% include header.ejs %>

<!-- container -->
<div class="container" style="padding: 20px">
    <div class="row">
    <div style="width: 10%;">
        <h5>Recepti</h5>
        <p><a href="/recepti/slatko">Slatki</a></p>
        <p><a href="/recepti/slano">Slani</a></p>

    </div>

    <% if (data) { %>
    <% data.forEach(function(recepti){ %>

    <div class="card" style="width:365px">
        <img class="card-img-top card-fill" src="<%= recepti.img %>" alt="Card image">
        <div class="card-body">
            <h4 class="card-title"><%= recepti.title %></h4>
            <p class="card-text"><%= recepti.description.slice(0, 140).replace(/<[^>]*>/g, '').replace(/&nbsp;/g,''); %>...</p>
            <a href="/recept/<%= recepti.recept_id %>">
                <button type="button" class="btn btn-primary">
                    Detaljnije
                </button>
            </a>
        </div>
    </div>
    <% }) %>
    <% } %>
    </div>
</div>
<!--End of container -->
<!-- footer -->
<% include footer.ejs %>

<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
<script type="text/javascript" src="/stylesheets/bootstrap/js/bootstrap.min.js"></script>
</body>

</html>
