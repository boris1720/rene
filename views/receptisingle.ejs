                                <img src="/assets/images/blog/author/2.png" alt="entry author">
                                <div class="entry--by-content">
                                    by : <a href="#"><%= recept.username %></a>
                                </div>
                            </div>
                            <div class="entry--meta">
                                <span class="entry--meta-date"><%= moment(recept.created_on).format("Do MMMM YYYY");%></span>
                                <span class="entry--meta-comments">comments: <a href="#">11</a></span>
                                <span class="entry--meta-cat"><a href="#"><%= recept.name %></a></span>
