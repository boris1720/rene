                    <% } %>

                    <div class="entry-widget entry-add-comment mb-0 clearfix">
                        <div class="entry-widget-title">
                            <h4>Ostavite komentar</h4>
                        </div>
                        <div class="entry-widget-content">
                            <form id="post-comment" class="mb-0" action="/recepti/submit" method="post" >
                                <div class="row">
                                    <div class="hidden">
                                        <input type="text" class="form-control" id="content_id" name="content_id" value="<%= id %>"/>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-6">
                                        <input type="text" class="form-control" id="author_name" name="author_name" placeholder="Ime:"/>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-6">
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Email:"/>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <textarea class="form-control" id="comment_content" name="comment_content" rows="3" placeholder="Komentar"></textarea>
                                    </div>
                                    <div class="col-xs-12 col-sm-12 col-md-12">
                                        <button type="submit" class="btn btn--secondary btn--block">Pošalji</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- .entry-comments end -->


                </div>
                <% }); } %>
